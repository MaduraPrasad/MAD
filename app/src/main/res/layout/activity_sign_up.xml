<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    android:background="@drawable/background1"
    >

    <ImageView
        android:id="@+id/box1"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/box1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/sign_up_label_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/sign_up_txt1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />

    <TextView
        android:id="@+id/sign_up_txt2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Address"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_address"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />
    <TextView
        android:id="@+id/sign_up_txt3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="City"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_city"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />
    <TextView
        android:id="@+id/sign_up_txt4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Phone"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_mobile"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />

    <TextView
        android:id="@+id/sign_up_txt5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="E-mail"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_email"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />
    <TextView
        android:id="@+id/sign_up_txt6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="username"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_user"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />
    <TextView
        android:id="@+id/sign_up_txt7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="60dp"

        />
    <EditText
        android:id="@+id/input_user_psw"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="55dp"
        />
    <Button

        android:id="@+id/sign_up_btn_2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:text="SIGN UP"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</RelativeLayout>